<% layout('layout') %>

<div class = 'ui container segment'>
    <h2 class='header'><%=post.title.toUpperCase()%></h2>
    <strong>By<a href='/profile/<%=post.author._id%>'> <%=post.author.name%></a></strong>
    <small><%=post.date.toDateString()%></small><br>
    <img src="/uploads/<%=post.image%>" alt="Nice Image" width='100%' height='500px'><br><br><hr>
    <p><%-post.content%></p>
    <a href="/posts" class='ui red inverted button'>Back</a>
   <%if(user && user._id.equals(post.author._id)){%>
        <a href="/posts/<%=post._id%>/edit" class='ui orange inverted button'>Edit</a>
   <%}%>
    <a href="/posts/<%=post._id%>/comments/new" class='ui green inverted button'>Comment</a><br>
    <small>Category: <a href="/categories/<%=post.category.name%>"><%=post.category.name%></a></small>
</div>


<div class = 'ui container segment'>
    <h3 class='header'>Comments (<%if(post.comments.length == 1){%>
    <span> <%=post.comments.length%>  Comment</span>
<%}else{%>
    <span> <%=post.comments.length%>  Comments</span>
<%}%>)</h3>
   
    <div class="ui relaxed divided list">
    <% post.comments.forEach(function(comment){%>
    <%=JSON.stringify(comment,undefined,2)%>
    <div class = "item">
        <div class="content">
             <!--<a class = "header" target = '_blank'><%=comment.author.name%></a>-->
            <div class='description'><%=comment.comment%></div><br>
        </div>
    </div><br>

    <%})%>
    </div>   
</div>
