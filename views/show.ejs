<% layout('layout') %>

<div class = 'ui container segment'>
    <h2 class='header'><%=post.title.toUpperCase()%></h2>
    <small><%=post.date.toDateString()%></small><br>
    <img src="/uploads/<%=post.image%>" alt="Nice Image" width='100%' height='500px'><br><br><hr>
    <p><%-post.content%></p>
    <a href="/posts" class='ui red inverted button'>Back</a>
    <a href="/posts/<%=post._id%>/edit" class='ui orange inverted button'>Edit</a>
    <a href="/posts/<%=post._id%>/comments/new" class='ui green inverted button'>Comment</a>
</div>

<div class = 'ui container segment'>
    <h3 class='header'>Comments  (<span><%=post.comments.length%> Comments</span>)</h3>
   
    <div class="ui relaxed divided list">
    <% post.comments.forEach(function(comment){%>
    <div class = "item">
        <div class="content">
            <div class='description'><%=comment.comment%></div><br>
        </div>
    </div><br>

    <%})%>
    </div>   
</div>
