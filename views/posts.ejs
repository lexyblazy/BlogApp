<% layout('layout')%>
<div class = 'ui container'>
    <% posts.forEach(function(post){%>
        
            <div class = 'ui container main text segment'>
            <h2 class='header'><%=post.title%></h2>
            <span><%=post.date.toDateString()%></span>
            <img src='/uploads/<%=post.image%>' width='650' height='400' auto='compress' cs='tinysrgb'>
            <p><%=post.content%></p>
            <a href="" class = 'ui purple inverted button'>Read More</a>
        </div>   
    <%})%>
</div>